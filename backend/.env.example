# Database connection string (Supabase Session Pooler recommended)
# Format: postgresql://USER:PASSWORD@HOST:PORT/postgres
# Important: URL-encode special characters in password (+ becomes %2B, etc.)
DATABASE_URL=postgresql://postgres.xxxxx:PASSWORD@aws-0-region.pooler.supabase.com:5432/postgres

# SSL configuration (auto-detected for Supabase URLs, but can be set explicitly)
DATABASE_SSL=true

# Server port
PORT=3000
